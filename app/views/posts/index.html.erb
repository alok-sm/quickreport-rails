<h1>Listing posts</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Description</th>
    <th>Lattitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= post.description %></td>
    <td><%= post.lattitude %></td>
    <td><%= post.longitude %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

